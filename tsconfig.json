{
  "compilerOptions": {
    "target": "es5", // 指定编译后的 JavaScript 版本
    "module": "commonjs", // 指定模块化方案
    "strict": true, // 启用所有严格类型检查选项
    "esModuleInterop": true, // 启用 ES 模块的交互
    "skipLibCheck": true, // 跳过对声明文件的检查
    "forceConsistentCasingInFileNames": true, // 强制文件名使用一致的大小写
    "outDir": "./dist", // 输出目录
    "rootDir": "./src", // TypeScript 文件的根目录
    "declaration": true // 生成声明文件（.d.ts）
  },
  "include": [
    "src/**/*.ts" // 包含的文件或目录
  ],
  "exclude": [
    "node_modules" // 排除的文件或目录
  ]
}
